{
  "name": "@kode-frontend/eslint-config",
  "version": "0.0.0",
  "main": "./dist/react.js",
  "description": "Shareable ESLint config enforcing best practices",
  "keywords": [
    "eslint",
    "eslint-config"
  ],
  "license": "MIT",
  "author": {
    "name": "KODE",
    "email": "frontend-team@kode.ru",
    "url": "https://kode.ru"
  },
  "repository": {
    "type": "git"
  },
  "homepage": "",
  "engines": {
    "node": ">= 16.16.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint"
  },
  "peerDependencies": {
    "eslint": "^8",
    "typescript": "5.x"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    "./react": {
      "types": "./dist/react.d.ts",
      "main": "./dist/react.js",
      "default": "./dist/react.js"
    },
    "./react-native": {
      "types": "./dist/react-native.d.ts",
      "main": "./dist/react-native.js",
      "default": "./dist/react-native.js"
    },
    "./package.json": "./package.json"
  }
