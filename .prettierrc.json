{
  "$schema": "http://json.schemastore.org/prettierrc",
  "arrowParens": "avoid",
  "bracketSameLine": true,
  "bracketSpacing": true,
  "htmlWhitespaceSensitivity": "ignore",
  "jsxSingleQuote": true,
  "printWidth": 80,
  "quoteProps": "as-needed",
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "overrides": [
    {
      "files": ["**/*.html", "**/*.css", "**/*.scss"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": [
        ".eslintrc",
        ".gqlconfig",
        ".prettierrc",
        ".prettierignore",
        ".stylelintrc"
      ],
      "options": {
        "parser": "json"
      }
    }
  ]
}
